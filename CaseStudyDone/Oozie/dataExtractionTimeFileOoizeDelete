sqoop job --meta-connect jdbc:hsqldb:hsql://localhost:16000/sqoop --create timeUpdateDelete -- import --connect jdbc:mysql://localhost/cdw_sapp --driver com.mysql.jdbc.Driver --query "SELECT TRANSACTION_ID, concat(YEAR,MONTH,DAY) as TIMEID, DAY, MONTH, if(MONTH <4, '1st', if(MONTH<7,'2nd',if(MONTH<10,'3rd','4th'))) as QUARTER, YEAR from cdw_sapp_creditcard WHERE \$CONDITIONS" --fields-terminated-by ',' --target-dir /user/maria_dev/Credit_Card_System/CDW_SAPP_D_TIME/ --delete-target-dir -m1
