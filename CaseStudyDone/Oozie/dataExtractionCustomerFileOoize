sqoop job -meta-connect jdbc:hsqldb:hsql://localhost:16000/sqoop --create customerUpdate -- import --connect jdbc:mysql://localhost/cdw_sapp --driver com.mysql.jdbc.Driver --query "SELECT SSN as CUST_SSN,
 CONCAT(UCASE(LEFT(FIRST_NAME,1)), LOWER(MID(FIRST_NAME,2))) as CUST_F_NAME,
 LOWER(MIDDLE_NAME) as CUST_M_NAME, 
 CONCAT(UCASE(LEFT(LAST_NAME,1)),
 LOWER(MID(LAST_NAME,1))) as CUST_L_NAME,
 CREDIT_CARD_NO as CUST_CC_NO,
 CONCAT(STREET_NAME, ' ', APT_NO) AS CUST_STREET,
 CUST_CITY, CUST_STATE, CUST_COUNTRY, CUST_ZIP, CONCAT(LEFT(CUST_PHONE,3), '-', MID(CUST_PHONE,4,3), '-', RIGHT(CUST_PHONE,4)) as CUST_PHONE,
 CUST_EMAIL, LAST_UPDATED from cdw_sapp_customer WHERE \$CONDITIONS" --fields-terminated-by ',' --target-dir /user/maria_dev/Credit_Card_System/CDW_SAPP_D_CUSTOMER/ --merge-key CUST_SSN --incremental lastmodified --check-column LAST_UPDATED --last-value '0' -m1
