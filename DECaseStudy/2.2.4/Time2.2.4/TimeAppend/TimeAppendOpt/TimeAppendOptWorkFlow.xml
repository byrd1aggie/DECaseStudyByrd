<?xml version="1.0" encoding="UTF-8"?>
<workflow-app xmlns="uri:oozie:workflow:0.2" name="timeAppend-wf">
    <start to="sqooptime_node"/>

    <action name="sqooptime_node">
        <sqoop xmlns="uri:oozie:sqoop-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
<command>job --meta-connect jdbc:hsqldb:hsql://localhost:16000/sqoop --exec creditCardUpdateFull</command>		 		
	    
	    <archive>/user/maria_dev/lib/java-json.jar#java-json.jar</archive>
        </sqoop>

<ok to= "Create_External_Table" />
        <error to="fail"/>
    </action>

   
   <action name = "Create_External_Table">
      <hive xmlns = "uri:oozie:hive-action:0.4">
         <job-tracker>${jobTracker}</job-tracker>
         <name-node>${nameNode}</name-node>
         <script>${nameNode}/user/maria_dev/Credit_Card_System/oozie_Credit_Card/TimeAppendOpt/TimeAppendOptExternal.hive</script>
      </hive>
		
      <ok to = "Create_orc_Table" />
      <error to = "fail" />
   </action>


   
   <action name = "Create_orc_Table">
      <hive xmlns = "uri:oozie:hive-action:0.4">
        <job-tracker>${jobTracker}</job-tracker>
         <name-node>${nameNode}</name-node>

         <script>${nameNode}/user/maria_dev/Credit_Card_System/oozie_Credit_Card/TimeAppend/TimeAppendOptOrc.hive</script>
      </hive>
		
      <ok to = "Insert_into_Table" />
      <error to = "fail" />
   </action>

   <action name = "Insert_into_Table">
      <hive xmlns = "uri:oozie:hive-action:0.4">
         <job-tracker>${jobTracker}</job-tracker>
         <name-node>${nameNode}</name-node>

         <script>${nameNode}/user/maria_dev/Credit_Card_System/oozie_Credit_Card/TimeAppend/TimeAppendOptCopyData.hql</script>
        
      </hive>	
      <ok to = "end" />
      <error to = "fail" />
   </action>

       
<kill name="fail">
        <message> Workflow failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
